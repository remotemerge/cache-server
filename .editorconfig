root = true

# config for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# config for js, html and css files
[*.{ts, tsx, js, jsx, vue, html, css, scss}]
indent_size = 2

# config for JSON, XML, YAML
[*.{json, xml, yml}]
indent_size = 2

[*.tsv]
indent_style = tab

# config for Markdown
[*.md]
trim_trailing_whitespace = false
