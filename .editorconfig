root = true

# applicable for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# config for Markdown
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

# config for JSON and YAML
[{composer.json, package.json, *.yml, .babelrc, .eslintrc, .flowconfig}]
indent_size = 2
